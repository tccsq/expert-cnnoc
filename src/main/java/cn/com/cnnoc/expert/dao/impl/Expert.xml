<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.cnnoc.expert.model.Expert">

	<insert id="insert" parameterType="Expert">
		insert into t_expert
		(expertName,major,expertDesc,createBy,modifyBy,createDate) values 
		(#{expertName},#{major},#{expertDesc},#{createBy},#{modifyBy},#{createDate})
	</insert>
	<update id="update" parameterType="Expert">
		update t_expert set 
		expertName=#{expertName}, 
		major = #{major},
		expertDesc = #{expertDesc},
		modifyBy = #{modifyBy} where id = #{id}
	</update>
	<select id="findById" parameterType="int" resultType="Expert">
		select * from t_expert where id = #{id}
	</select>
	<select id="findTotal" resultType="int">
		select count(1) from t_expert
	</select>
	<select id="findPaged" parameterType="java.util.Map" resultType="Expert">
		select * from t_expert limit #{start},#{rows}
	</select>
	<delete id="delete" parameterType="int">
		delete from t_expert where id = #{id}
	</delete>
	
	
</mapper>